{
  "name": "alphagov/pay-integration-php",
  "description": "PHP client for GOV.UK Pay",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Neil Smith",
      "email": "neil@nsmith.net"
    }
  ],
  "require": {
    "php": ">=5.4",
    "psr/http-message": "^1.0",
    "php-http/httplug": "^1.0",
    "guzzlehttp/psr7" : "^1.2"
  },
  "require-dev": {
    "phpspec/phpspec": "^2.0",
    "php-http/guzzle6-adapter": "^1.0",
    "guzzlehttp/guzzle": "^6.0"
  },
  "suggest": {
    "ext-curl": "To send requests using cURL"
  },
  "autoload": {
    "psr-4": {
      "Alphagov\\Pay\\": "src/"
    }
  }
}
